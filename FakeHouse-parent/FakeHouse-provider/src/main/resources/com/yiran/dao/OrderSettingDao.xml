<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yiran.dao.OrderSettingDao">



    <!--  查询日期为  date 的数据条数  -->
    <select id="findCountByDate" parameterType="java.util.Date" resultType="java.lang.Integer">
        select count(id) from t_ordersetting where orderDate = #{value}
    </select>

    <!--  通过对比Date进行数据的更新  -->
    <update id="updateByDate" parameterType="com.yiran.pojo.OrderSetting">
        update t_ordersetting
        <set>
            <if test="number != null">
                number = #{number},
            </if>
        </set>
        where orderDate = #{orderDate}
    </update>

    <!--  插入新数据  -->
    <insert id="add" parameterType="com.yiran.pojo.OrderSetting">
        insert into t_ordersetting(orderDate,number,reservations)
        values
        (#{orderDate},#{number},#{reservations})
    </insert>


    <!--  根据日期范围查询  -->
    <select id="getOrderSettingByMonth" parameterType="java.util.Map" resultType="com.yiran.pojo.OrderSetting">
        select * from t_ordersetting where orderDate between #{begin} and #{end}
    </select>

    <!--  根据日期查询  -->
    <select id="findByOrderDate" parameterType="java.util.Date" resultType="com.yiran.pojo.OrderSetting">
        select * from t_ordersetting where orderDate = #{date}
    </select>

    <!--  更新预约人数  -->
    <update id="incReservation" parameterType="java.util.Date">
        update t_ordersetting set reservations = reservations + 1 where orderDate = #{orderDate}
    </update>


</mapper>